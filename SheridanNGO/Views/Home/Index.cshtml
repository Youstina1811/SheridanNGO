@page
@{
    ViewData["Title"] = "Welcome To The NGO";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css" /> <!-- Link to your CSS file -->
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .header {
            background-color: yellow;
            text-align: center;
            padding: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 2em;
        }
        .buttons {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }
        .button {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 10px;
            cursor: pointer;
            font-size: 1em;
        }
        .about-section {
            display: flex;
            justify-content: space-around;
            margin: 20px;
        }
        .about-content {
            flex: 1;
            margin-left: 20px;
        }
        .image-placeholder {
            border: 1px dashed #ccc;
            height: 200px;
            width: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ccc;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Welcome To The NGO</h1>
        <a href="/Account/Create" class="button">Create an Account</a>
        <a href="/Account/Login" class="button">Sign in</a>
    </div>
    <div class="about-section">
        <div class="image-placeholder">Image Placeholder</div>
        <div class="about-content">
            <h2>About Us</h2>
            <p>Learn more about our mission and the work we do.</p>
        </div>
    </div>
    <div class="buttons">
        <button class="button" onclick="location.href='/Volunteer'">To Volunteer!</button>
        <button class="button" onclick="location.href='/Contact'">Contact Us!</button>
        <button class="button" onclick="location.href='/Newsletter'">Join Our Newsletter</button>
    </div>
</body>
</html>

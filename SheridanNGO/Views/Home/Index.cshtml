@{}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>Welcome To The NGO</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .header {
            display: flex; /* Use flexbox for layout */
            justify-content: space-between; /* Space between left and right */
            align-items: center; /* Center items vertically */
            background-color: yellow;
            padding: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 2em;
        }
        .header .top-button {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 5px; /* Adjust margin for spacing */
            cursor: pointer;
            font-size: 1em;
        }
        .about-section {
            display: flex;
            justify-content: space-around;
            margin: 20px;
        }
        .about-content {
            flex: 1;
            margin-left: 20px;
        }
        .image-placeholder {
            border: 1px dashed #ccc;
            height: 200px;
            width: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ccc;
        }
        .buttons {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }
        .buttons .button {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 5px; /* Consistent margin for buttons */
            cursor: pointer;
            font-size: 1em;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Welcome To The NGO</h1>
        <div>
            <a href="/Account/Create" class="top-button">Create an Account</a>
            <a href="@Url.Action("SignIn", "Home")" class="top-button">Sign in</a>
            <a href="@Url.Action("SignUp", "Home")" class="top-button">Create an Account</a>

        </div>
    </div>
    <div class="about-section">
        <div class="image-placeholder">Image Placeholder</div>
        <div class="about-content">
            <h2>About Us</h2>
            <p>Learn more about our mission and the work we do.</p>
        </div>
    </div>
    <div class="buttons">
        <button class="button" onclick="location.href='/Volunteer'">To Volunteer!</button>
        <button class="button" onclick="location.href='/Contact'">Contact Us!</button>
        <button class="button" onclick="location.href='/Newsletter'">Join Our Newsletter</button>
    </div>
</body>
</html>

@model IEnumerable<SheridanNGO.Models.Campaign>
@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom styling for dashboard */
        .dashboard-header {
            background-color: #007BFF;
            color: white;
            padding: 15px;
            font-size: 24px;
        }

        .navbar-custom {
            background-color: #343a40;
        }

        .navbar-custom a {
            color: white !important;
            font-weight: bold;
        }

        .card {
            margin-bottom: 20px;
        }

        .campaign-card {
            cursor: pointer;
            transition: transform 0.2s;
        }

        .campaign-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .action-btn {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        .action-btn:hover {
            background-color: #0056b3;
        }

        .container {
            margin-top: 30px;
        }

        .campaign-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .campaign-item {
            width: 22%;
            margin-bottom: 20px;
        }

        .btn-link {
            color: #007BFF;
            font-size: 16px;
            text-decoration: none;
        }

        .btn-link:hover {
            text-decoration: underline;
        }

        .logout-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        .logout-btn:hover {
            background-color: #c82333;
        }

        /* Custom style for clickable area with image */
        .clickable-area {
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: transform 0.3s;
        }

        .clickable-area:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .clickable-area img {
            width: 100px;
            height: 100px;
            margin-right: 20px;
            object-fit: cover;
        }

        .clickable-area .content {
            font-size: 18px;
            font-weight: bold;
        }

        .clickable-area .content p {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header text-center">
            <h1>Welcome, @ViewBag.User.Name!</h1>
            <p>Here's what's happening at Sheridan NGO.</p>
        </div>



        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-custom mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Sheridan NGO</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageProfile", "Account")">Manage Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Receipts", "Account")">Receipts</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="@Url.Action("Logout", "Account")">
                                <button type="submit" class="logout-btn">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Campaign List -->
        <div class="campaign-list">
            @foreach (var campaign in Model)
            {
                <div class="campaign-item">
                    <div class="card campaign-card">
                        @* <img src="@campaign.ImageUrl" class="card-img-top" alt="Campaign Image" /> *@
                        <div class="card-body">
                            <h5 class="card-title">@campaign.Title</h5>
                            <p class="card-text">@campaign.Description</p>
                            <p><strong>Goal: </strong>@campaign.GoalAmount</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- New Title Section -->
        <div class="text-center my-4">
            <h2>What Can Help</h2>
        </div>

        <!-- Clickable Area with Image -->
        <div class="clickable-area" onclick="window.location.href='@Url.Action("ExploreCampaign", "Account" ,new { id = 1 })'">

            <img src="~/images/campaign1.jpg" alt="Help Image" />
            <div class="content">
                <h4>Housing Instability</h4>
                <p>Living without stable shelter severely affects individuals' ability to maintain good health, seek employment, and access education, further entrenching them in a cycle of need.</p>
            </div>
        </div>



        <!-- Clickable Area with Image -->
        <div class="clickable-area" onclick="window.location.href='@Url.Action("SomeAction", "Controller",new { id = 2 })'">
            <img src="~/images/campaign2.jpg" alt="Help Image" />
            <div class="content">
                <h4>Mental Health Issues</h4>
                <p>1 in 4 people will be affected by mental or neurological disorders (WHO)</p>
            </div>
        </div>



        <!-- Clickable Area with Image -->
        <div class="clickable-area" onclick="window.location.href='@Url.Action("SomeAction", "Controller",new { id = 3 })'">
            <img src="~/images/campaign3.jpg" alt="Help Image" />
            <div class="content">
                <h4>Children’s Feeding</h4>
                <p>The days, months, or years a child spends without proper nutrition create problems that last a lifetime. But when you feed children through Convoy of Hope, you become part of the solution.</p>
            </div>
        </div>



        <!-- Clickable Area with Image -->
        <div class="clickable-area" onclick="window.location.href='@Url.Action("SomeAction", "Controller",new { id = 4 })'">
            <img src="~/images/campaign4.jpg" alt="Help Image" />
            <div class="content">
                <h4>Community Events</h4>
                <p>Civic organizations, churches, businesses, and government agencies come together at Convoy of Hope’s Community Events to bring help and hope to families in need. Together, they offer free services to each and every Guest of Honor.</p>
            </div>
        </div>




        <!-- Footer -->
        <footer class="text-center mt-5">
            <p>&copy; @DateTime.Now.Year Sheridan NGO. All Rights Reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

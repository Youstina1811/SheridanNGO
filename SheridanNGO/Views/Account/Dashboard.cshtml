@model IEnumerable<SheridanNGO.Models.Campaign>
@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom styling for dashboard */
        .dashboard-header {
            background-color: #007BFF;
            color: white;
            padding: 15px;
            font-size: 24px;
        }

        .navbar-custom {
            background-color: #343a40;
        }

            .navbar-custom a {
                color: white !important;
                font-weight: bold;
            }

        .card {
            margin-bottom: 20px;
        }

        .campaign-card {
            cursor: pointer;
            transition: transform 0.2s;
        }

            .campaign-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

        .action-btn {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

            .action-btn:hover {
                background-color: #0056b3;
            }

        .container {
            margin-top: 30px;
        }

        .campaign-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .campaign-item {
            width: 22%;
            margin-bottom: 20px;
        }

        .btn-link {
            color: #007BFF;
            font-size: 16px;
            text-decoration: none;
        }

            .btn-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header text-center">
            <h1>Welcome, @ViewBag.User.Name!</h1>
            <p>Here's what's happening at Sheridan NGO.</p>
        </div>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Sheridan NGO</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageProfile", "Account")">Manage Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Receipts", "Account")">Receipts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Campaign List -->
        <div class="campaign-list">
            @foreach (var campaign in Model)
            {
                <div class="campaign-item">
                    <div class="card campaign-card">
                         @* <img src="@campaign.ImageUrl" class="card-img-top" alt="Campaign Image" />  *@
                        <div class="card-body">
                            <h5 class="card-title">@campaign.Title</h5>
                            <p class="card-text">@campaign.Description</p>
                            <p><strong>Goal: </strong>@campaign.GoalAmount</p>
                            <a href="@Url.Action("Details", "Campaign", new { id = campaign.CampaignID })" class="btn btn-link">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <footer class="text-center mt-5">
            <p>&copy; @DateTime.Now.Year Sheridan NGO. All Rights Reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model SheridanNGO.Models.Campaign
@{
    ViewData["Title"] = "Campaign Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            @* <img src="@Model.ImageUrl" class="card-img-top" alt="Campaign Image"> *@
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p><strong>Goal Amount:</strong> @Model.GoalAmount</p>
                <p><strong>Current Amount Raised:</strong> @Model.CurrentAmount</p>
                <p><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>End Date:</strong> @Model.EndDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>Cause Category:</strong> @Model.CauseCategory</p>

                <a href="@Url.Action("Donate", "Campaign", new { id = Model.CampaignID })" class="btn btn-primary">Donate Now</a>
                <a href="@Url.Action("Dashboard", "Account")" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

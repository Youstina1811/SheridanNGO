@model IEnumerable<SheridanNGO.Models.Receipt>
@{
    ViewData["Title"] = "Receipts";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .receipts-table {
            margin-top: 30px;
        }

        .table th {
            background-color: #007BFF;
            color: white;
        }

        .table td {
            vertical-align: middle;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mt-4">Receipts</h2>

        @if (!Model.Any())
        {
            <p>No receipts found.</p>
        }
        else
        {
            <table class="table table-striped receipts-table">
                <thead>
                    <tr>
                        <th>Receipt ID</th>
                        <th>Donation Date</th>
                        <th>Amount Donated</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var receipt in Model)
                    {
                        <tr>
                            <td>@receipt.ReceiptID</td>
                            <td>@receipt.ReceiptDate.ToShortDateString()</td>
                            <td>@receipt.AmountDonated.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("DownloadReceipt", "Account", new { id = receipt.ReceiptID })" class="btn btn-info btn-sm">Download</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="mt-4">
            <a href="@Url.Action("Dashboard", "Account")" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

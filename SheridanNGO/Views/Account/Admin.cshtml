@{
    ViewData["Title"] = "Admin";
}

<h1>Admin Dashboard</h1>

<div>
    <button id="btn-donors" class="btn btn-primary">Show Donors</button>
    <button id="btn-ngos" class="btn btn-secondary">Show NGOs</button>
</div>

<div id="result" class="mt-4"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btn-donors").click(function () {
                $("#result").load('/Admin/ListDonors');
            });

            $("#btn-ngos").click(function () {
                $("#result").load('/Admin/ListNGOs');
            });
        });
    </script>
}

@model dynamic

<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-5">Admin Dashboard</h1>

        <!-- Navigation Buttons -->
        <div class="d-flex justify-content-center mb-4">
            <button class="btn btn-primary mx-2" onclick="toggleSection('donorsSection')">Show Donors</button>
            <button class="btn btn-success mx-2" onclick="toggleSection('ngosSection')">Show NGOs</button>
            <button class="btn btn-warning mx-2" onclick="toggleSection('adminsSection')">Show Admins</button>
        </div>

        <!-- Donors Section -->
        <div id="donorsSection" class="section" style="display: none;">
            <h2>List of Donors</h2>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donor in Model.Donors)
                    {
                        <tr>
                            <td>@donor.Name</td>
                            <td>@donor.Email</td>
                            <td>@donor.Phone</td>
                            <td>
                                <button class="btn btn-success btn-sm me-2" onclick="makeAdmin(@donor.UserID)">Promote to Admin</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteUser(@donor.UserID)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- NGOs Section -->
        <div id="ngosSection" class="section" style="display: none;">
            <h2>List of NGOs</h2>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ngo in Model.NGOs)
                    {
                        <tr>
                            <td>@ngo.Name</td>
                            <td>@ngo.Email</td>
                            <td>@ngo.Phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Admins Section -->
        <div id="adminsSection" class="section" style="display: none;">
            <h2>List of Admins</h2>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var admin in Model.Admins)
                    {
                        <tr>
                            <td>@admin.Name</td>
                            <td>@admin.Email</td>
                            <td>@admin.Phone</td>
                            <td>
                                @if (admin.Email != "admin")
                                {
                                    <button class="btn btn-warning btn-sm me-2" onclick="demoteAdmin(@admin.UserID)">Demote</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteUser(@admin.UserID)">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Volunteers Section -->
        <div id="volunteersSection" class="mt-5">
            <h2>List of Volunteers (Sorted by Availability)</h2>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Available Days</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <tr>
                            <td>@volunteer.Name</td>
                            <td>@volunteer.Email</td>
                            <td>@volunteer.Phone</td>
                            <td>@volunteer.AvailableDays</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function toggleSection(sectionId) {
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => {
                section.style.display = (section.id === sectionId) ? 'block' : 'none';
            });

            // Always keep Volunteer section visible
            document.getElementById('volunteersSection').style.display = 'block';
        }
                function deleteUser(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                fetch(`/Account/DeleteUser/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        alert("User deleted successfully.");
                        location.reload(); // Reload to reflect changes
                    } else {
                        alert("Failed to delete user.");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("An error occurred while deleting the user.");
                });
            }
        }

        function demoteAdmin(userId) {
            if (confirm("Are you sure you want to demote this admin?")) {
                fetch(`/Account/DemoteAdmin/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        alert("Admin demoted successfully.");
                        location.reload(); // Reload to reflect changes
                    } else {
                        alert("Failed to demote admin.");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("An error occurred while demoting the admin.");
                });
            }
        }

                function makeAdmin(userId) {
            if (confirm("Are you sure you want to promote this user to admin?")) {
                fetch(`/Account/PromoteToAdmin/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        alert("User promoted to admin successfully.");
                        location.reload(); // Reload to reflect changes
                    } else {
                        alert("Failed to promote user to admin.");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("An error occurred while promoting the user to admin.");
                });
            }
        }


    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
